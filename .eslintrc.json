{
   // Root
   "root": true,
   // Parent Cofiguration
   "extends": [
      "eslint:recommended",
      "airbnb-base"
   ],
   // Environments
   "env": {
      "es6": true,
      "mocha": true,
      "browser": true,
      "node": true
   },
   // Project rules
   "rules": {
      "indent": [
         "error",
         3
      ],
      "no-underscore-dangle": "off",
      "global-require": "off",
      "class-methods-use-this": "off",
      "no-plusplus": "off",
      // Chai expressions
      "no-unused-expressions": 0,
      "chai-friendly/no-unused-expressions": 2
   },
   // Settings
   "settings": {
      "import/resolver": "webpack"
   },
   "globals": {
      "evodoc": true
   },
   "plugins": [
      "chai-friendly"
   ]
}