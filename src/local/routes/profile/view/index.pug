      .profile__username #{username}
      .profile__name #{name}
      .profile__email 
         i.fas.fa-envelope envelope
         | 
         | #{email}

      if(github != null)
         .profile__github
            i.fab.fa-github 
            | 
            | #{github}
      if(twitter != null)
         .profile__twitter
            i.fab.fa-twitter twitter
            | 
            | #{twitter}

