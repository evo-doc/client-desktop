      .list
         if(projects.length === 0)
            | You have no projects. Maybe you want to 
            a(href="/projects/create") create
            |
            | some?
         else
            - var n = 0;
            while n < projects.length
               a.list__item(href="/project/" + projects[n][0] + "/view")
                  .list__header
                     .list__header-left
                        .list__title
                           if(projects[n][2] != "")
                              | #{projects[n][2]}
                           else
                              | No project name
                     .list__header-right
                        .list__labels.tags
                           if(projects[n][1] === true)
                              .tag.tag_owner owner
                  .list__description
                     if(projects[n][3] != "")
                        | #{projects[n][3]}
                     else
                        | No project description
               - n++

      a.button(href="/projects/view") View all projects